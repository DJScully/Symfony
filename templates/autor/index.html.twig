{% extends 'base.html.twig' %}

{% block title %} <title>Vista</title>  {% endblock %}
{% block body %}  
{{ include('menu.html.twig', { selectedMenu: 'home'}) }}
<br>
<a class="btn btn-primary" href="{{ path('autor-new') }}">Crear Nuevo Autor</a>
<br><br>
<table class="table table-dark table-bordered table-striped">
  <thead>
    <th>Nombre</th>
    <th>Tipo</th>
    <th>Ver</th>
    <th>Actualizar</th>
    <th>Eliminar</th>
  </thead>
  <tbody>
  {% for autor in fondos %} 
    <tr>
      <td> {{ autor.nombre }} </td>
      <td> {{ autor.tipo }} </td>
      <td> <a  class="btn btn-primary" href="{{ path('autor-ver', {id: autor.id}) }}">Ver</a> </td>
      <td> <a  class="btn btn-primary" href="{{ path('autor-act', {id: autor.id}) }}">Actualizar</a> </td>
      <td> <a  class="btn btn-primary" href="{{ path('autor-delete', {id: autor.id}) }}">Eliminar</a> </td>
     </tr>

  {% endfor %}
  </tbody>
   
</table>


{% endblock %}