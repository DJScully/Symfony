{% extends 'base.html.twig' %}

{% block title %}Fondo index{% endblock %}

{% block body %}
    <h1>Fondo index</h1>
{{ include('menu.html.twig', { selectedMenu: 'home'}) }}

    <table class="table table-dark table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Edicion</th>
                <th>Publicacion</th>
                <th>Categoria</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fondo in fondos %}
            <tr>
                <td>{{ fondo.id }}</td>
                <td>{{ fondo.Titulo }}</td>
                {%  for autor in fondo.autor %}
                <td>{{ autor.nombre }}</td>
                {% endfor %}
                <td>{{ fondo.ISBN }}</td>
                <td>{{ fondo.edicion }}</td>
                <td>{{ fondo.publicacion }}</td>
                <td>{{ fondo.categoria }}</td>
                <td>
                    <a href="{{ path('libro_show', {'id': fondo.id}) }}">show</a>
                    <a href="{{ path('libro_edit', {'id': fondo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('libro_new') }}">Create new</a>
{% endblock %}
